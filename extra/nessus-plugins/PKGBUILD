# $Id: PKGBUILD 41902 2009-06-07 21:09:40Z eric $
# Maintainer: Kevin Piche <kevin@archlinux.org>
# Contributor: Markus Meissner <markus@meissna.de>

pkgname=nessus-plugins
pkgver=2.2.11
pkgrel=1
pkgdesc='The nessus plugins'
arch=(i686 x86_64)
url="http://www.nessus.org"
license=('GPL2')
depends=("nessus-core>=${pkgver}" "nessus-libraries>=${pkgver}" 'openssl>=0.9.8b')
options=('!makeflags')
source=('http://downloads.nessus.org/nessus3dl.php?file=nessus-plugins-GPL-2.2.11.tar.gz&licence_accept=yes&t=b2e0ea50e3d01734b497ca1f8025416b')
md5sums=('85cc712e833536412b393378f509d4ec')

build(){
  cd ${srcdir}/${pkgname}
  sed -i 's|scripts/\*.nbin||' Makefile || return 1
  sed -i 's|scripts/\*.nlib||' Makefile || return 1
  ./configure --prefix=/usr --localstatedir=/var --sysconfdir=/etc --mandir=/usr/share/man || return 1
  make || return 1
  make install DESTDIR=${pkgdir} || return 1
}
