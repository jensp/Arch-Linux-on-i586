# $Id: PKGBUILD 41899 2009-06-07 21:06:22Z eric $
# Maintainer: Kevin Piche <kevin@archlinux.org>
# Contributor: Markus Meissner <markus@meissna.de>

pkgname=nessus-libraries
pkgver=2.2.11
pkgrel=1
pkgdesc='The nessus libraries'
arch=(i586 i686 x86_64)
url="http://www.nessus.org"
license=('LGPL')
depends=('glibc' 'bash')
options=(!libtool)
source=('http://downloads.nessus.org/nessus3dl.php?file=nessus-libraries-2.2.11.tar.gz&licence_accept=yes&t=e481b5eca299e6c55e43a9b045f0da92')
md5sums=('c1180bec3a7f1b78d4d881f9a73e99bc')

build() {
  cd ${srcdir}/${pkgname}
  ./configure --prefix=/usr --mandir=/usr/share/man --localstatedir=/var || return 1
  make || return 1
  make install DESTDIR=${pkgdir} || return 1
}
