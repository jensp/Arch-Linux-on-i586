# $Id: PKGBUILD 44499 2009-07-02 07:41:47Z allan $
# Maintainer: Giovanni Scafora <giovanni@archlinux.org>
# Contributor: Jason Chu <jason@archlinux.org>

pkgname=dvgrab
pkgver=3.4
pkgrel=3
pkgdesc="Saves audio and video data from an IEEE (FireWire) digital source"
arch=('i586' 'i686' 'x86_64')
url="http://www.kinodv.org"
license=('GPL')
depends=('libdv>=1.0.0' 'libavc1394>=0.5.3-3' 'libjpeg>=7' 'libiec61883>=1.2.0' 'gcc-libs')
makedepends=('pkgconfig')
source=(http://downloads.sourceforge.net/sourceforge/kino/${pkgname}-${pkgver}.tar.gz
        dvgrab-3.4-gcc43.patch)
md5sums=('093b74cb9f9bf321e48ffbbe5ba8cba6'
         'f89ac8e29d93b9644ac451f4009a8dc1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -Np1 -i ${srcdir}/dvgrab-3.4-gcc43.patch || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
