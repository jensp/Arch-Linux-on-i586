post_install() {
  getent group camera >/dev/null || usr/sbin/groupadd -g 97 camera
  /bin/cat <<THEEND
NOTE
----
Add your user to group 'camera' to use camera devices.
THEEND
}

post_upgrade() {
  getent group camera >/dev/null || usr/sbin/groupadd -g 97 camera
}

post_remove() {
  usr/sbin/groupdel camera &>/dev/null
}
