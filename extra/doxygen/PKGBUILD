# $Id: PKGBUILD 37457 2009-05-02 02:42:01Z allan $
# Maintainer: Dan McGee <dan@archlinux.org>
pkgname=doxygen
pkgver=1.5.9
pkgrel=1
pkgdesc="A documentation system for C++, C, Java, IDL and PHP"
license=('GPL')
arch=(i586 i686 x86_64)
url="http://www.doxygen.org/"
depends=('gcc-libs')
# qt required to build and run doxywizard, but don't want to drag it in
makedepends=('flex' 'qt')
optdepends=('graphviz: for caller/callee graph generation'
            'qt: for doxywizard')
source=(ftp://ftp.stack.nl/pub/users/dimitri/${pkgname}-${pkgver}.src.tar.gz)

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  QTDIR=/usr ./configure --prefix /usr --with-doxywizard
  make || return 1
  make INSTALL=${startdir}/pkg/usr MAN1DIR=share/man/man1 install
}

md5sums=('33c5598fa6d24cbc55849eaf89652557')
