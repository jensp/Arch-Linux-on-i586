# $Id: PKGBUILD 26497 2009-02-08 06:48:30Z eric $
# Maintainer: Eric Belanger <eric@archlinux.org>
# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=di
pkgver=4.13
pkgrel=1
pkgdesc="di is a disk information utility, displaying everything (and more) that your df command does"
arch=('i586' 'i686' 'x86_64')
url="http://www.gentoo.com/di/"
license=('ZLIB')
depends=('glibc')
options=('!makeflags')
source=(http://www.gentoo.com/di/${pkgname}-${pkgver}.tar.gz)
md5sums=('7f774bf1d044c28136373fdd06489cb1')
sha1sums=('6cd254482f6075b83191e58b327516e6701840fb')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  unset LDFLAGS
  SHELL=/bin/bash
  prefix=${pkgdir} $SHELL ./Build
  make || return 1
  make prefix=${pkgdir}/usr install || return 1
  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  install -D -m644 LICENSE.iffe ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.iffe
}
