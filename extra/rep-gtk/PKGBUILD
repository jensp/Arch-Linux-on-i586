# $Id: PKGBUILD 45431 2009-07-11 14:22:06Z juergen $
# Maintainer: Juergen Hoetzel <juergen@archlinux.org>

pkgname=rep-gtk
pkgver=0.18.6
pkgrel=1
pkgdesc="Binding of the GTK and GDK libraries for the librep Lisp environment"
arch=('i586' 'i686' 'x86_64')
url="http://rep-gtk.sourceforge.net/"
license=('GPL')
depends=('librep>=0.90.0' 'gtk2>=2.16.1')
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.bz2)
md5sums=('678bcb3eb1d67b45fd1840d00e693bd5')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  # shrug: they forgot to generate configure scripts
  ./autogen.sh
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
