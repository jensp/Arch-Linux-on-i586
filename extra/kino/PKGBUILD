# $Id: PKGBUILD 37826 2009-05-03 22:21:20Z jgc $
# Maintainer: Giovanni Scafora <giovanni@archlinux.org>
# Contributor: Robert Emil Berge <robert@rebi.no>

pkgname=kino
pkgver=1.3.3
pkgrel=2
pkgdesc="A non-linear DV editor."
url="http://www.kinodv.org/"
arch=('i586' 'i686' 'x86_64')
license=('GPL')
depends=('libglade>=2.6.4' 'libdv>=1.0.0' 'libsamplerate' 'libxv' 'libiec61883>=1.2.0' 'libavc1394>=0.5.3-3' 'libsm')
makedepends=('intltool')
source=(http://downloads.sourceforge.net/sourceforge/kino/${pkgname}-${pkgver}.tar.gz kino-gcc43.patch)
md5sums=('a91b2e574e9872ac2b892165a4529ced' 'ee0c377d3d22d1df2ec5aa9c840be7c5')
options=("!libtool")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -Np0 -i "${srcdir}/kino-gcc43.patch" || return 1
  ./configure --prefix=/usr --sysconfdir=/etc || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  chown root:root -R $pkgdir/usr/share/kino/help
}
